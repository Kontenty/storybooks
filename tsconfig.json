{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "tests"]
}